    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch C++ program (lldb 起動)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/main",
            "preLaunchTask": "Build C++ Program: Make Build",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Go: Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        }
    ]
}
